@model PaginatedList<SalesOrder.DTOs.OrderDto>
@{
    ViewData["Title"] = "Sales Order List";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">SALES ORDER</h5>
    </div>
    <div class="card-body bg-light">
        <form asp-action="Index" method="get" class="mb-3">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" name="keyword" class="form-control" placeholder="Keywords" value="@ViewBag.Keyword">
                </div>
                <div class="col-md-4">
                    <input type="date" name="orderDate" class="form-control" value="@ViewBag.OrderDate">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
        <div class="mb-3">
            <a asp-action="Add" class="btn btn-danger">Add New Data</a>
               <a asp-controller="Export" asp-action="ExportToExcel" 
                  asp-route-keyword="@ViewBag.Keyword" 
                  asp-route-orderDate="@ViewBag.OrderDate" 
                  asp-route-page="@Model.PageIndex" 
                  asp-route-pageSize="@Model.PageSize" 
                  class="btn btn-primary">Export to Excel</a>
        </div>
        <table class="table table-striped">
            <thead class="bg-primary text-white">
                <tr>
                    <th>No</th>
                    <th>Action</th>
                    <th>Sales Order</th>
                    <th>Order Date</th>
                    <th>Customer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (order, index) in Model.Select((o, i) => (o, i + 1)))
                {
                    <tr>
                        <td>@((Model.PageIndex - 1) * Model.PageSize + index)</td>
                        <td>
                            <div class="d-inline">
                                <a asp-action="Edit" asp-route-id="@order.SoOrderId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@order.SoOrderId" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                        <td>@order.OrderNo</td>
                        <td>@order.OrderDate.ToString("dd/M/yyyy")</td>
                        <td>@order.CustomerName</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItems items
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @{
                        const int totalPagesToShow = 5;
                        var startPage = Math.Max(1, Model.PageIndex - 2);
                        var endPage = Math.Min(Model.TotalPages, startPage + totalPagesToShow - 1);
                        startPage = Math.Max(1, endPage - totalPagesToShow + 1);
                    }
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-keyword="@ViewBag.Keyword" asp-route-orderDate="@ViewBag.OrderDate">&laquo;</a>
                    </li>
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-keyword="@ViewBag.Keyword" asp-route-orderDate="@ViewBag.OrderDate">@i</a>
                        </li>
                    }
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-keyword="@ViewBag.Keyword" asp-route-orderDate="@ViewBag.OrderDate">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
</div>