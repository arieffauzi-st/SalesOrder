@model List<SalesOrder.DTOs.OrderDto>
@{
    ViewData["Title"] = "Sales Order List";
    Layout = "_Layout";
}

<h1>Sales Order List</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col">
            <input type="text" name="keyword" class="form-control" placeholder="Keyword" value="@ViewBag.Keyword">
        </div>
        <div class="col">
            <input type="date" name="orderDate" class="form-control" value="@ViewBag.OrderDate">
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<a asp-action="Add" class="btn btn-primary mb-3">Add New Order</a>
<a href="#" class="btn btn-secondary mb-3">Export To Excel</a>
<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Action</th>
            <th>Sales Order</th>
            <th>Order Date</th>
            <th>Customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (order, index) in Model.Select((o, i) => (o, i + 1)))
        {
            <tr>
                <td>@index</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.SoOrderId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.SoOrderId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                </td>
                <td>@order.OrderNo</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.CustomerName</td>
            </tr>
        }
    </tbody>
</table>